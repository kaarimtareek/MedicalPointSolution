@using MedicalPoint.ViewModels.Visits;
@model AddVisitViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/userDesign/css/all.min.css">
    <link rel="stylesheet" href="~/userDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userDesign/css/style.css">
    <title>تسجيل بيانات الكشف</title>
    <link rel="icon" href="~/userDesign/img/logo.png">
</head>

<body class="background-with-color">

    <nav class="navbar navbar-expand-lg navbar-light d-none d-lg-block ">
        <div class="container ">
            <div>
                <a class="my-button ml-2">تسجيل الخروج <i class="fa-solid fa-right-from-bracket"></i></a>
                <a class="my-button-blue" asp-action="Index" asp-controller="Patients">العودة للرئيسية <i class="fa-solid fa-house"></i></a>
            </div>
            <img src="~/userDesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="landing-three ">
        <form method="post" asp-action="Create">
            <div class="container fadeInUp-animation">
                <div class="row  justify-content-center p-5">
                    <input hidden asp-for="PatientId" value="@Model.PatientId" />
                    <div class="col-lg-12 text-center">
                        <h1 id="choose"> تسجيل بيانات الكشف للمريض @Model.Patient?.Name <i class="fa-solid fa-user-pen"></i></h1>
                    </div>
                    <div class="col-lg-4 text-center">
                        <select asp-for="ClinicId" id="my-select" class="form-select my-select" required asp-items="ViewBag.Clinics">
                            <option  selected>العيادة</option>
                            
                        </select>
                    </div>
                    <div class="col-lg-4 text-center">
                        <select asp-for=Type id="my-select" class="form-select my-select" required asp-items="ViewBag.VisitTypes">
                            <option value="0" selected>النوع</option>
                            
                        </select>
                    </div>
                    <div class="col-lg-4 text-center">
                        <input asp-for=VisitTime class="my-input"  type="datetime-local" id="myDatetime">
                    </div>



                    <div class="col-lg-4 text-center">
                        <button type="submit" value="Create" class="my-button  mt-3">
                            حفظ البيانات <i class="fa-solid fa-floppy-disk"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </div>


    <button type="button" id="popoutButton" class="my-button" data-bs-toggle="modal"
            data-bs-target="#exampleModal" style="display: none;"></button>
    <div class="modal fade text-center" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">


                    <div class="row justify-content-center">
                        <div class="col-lg-12">

                            <div class="col-lg-12">
                                <i style="color: var(--red-color); font-size: 80px; margin-bottom:15px;"
                                   class="fa-solid fa-circle-exclamation fa-beat-fade"></i>
                            </div>
                            <div class="col-lg-12">
                                <h4 id="errorText">هناك خطأ ما</h4>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    <!--popout div-->
    <div class="text-center">
        <button type="button" id="popoutButton" class="my-button" data-bs-toggle="modal"
                data-bs-target="#exampleModal" style="display: none;"></button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">


                        <div class="row justify-content-center">
                            <div class="col-lg-12">

                                <div class="col-lg-12">
                                    <i style="color: var(--red-color); font-size: 80px; margin-bottom:15px;"
                                       class="fa-solid fa-circle-exclamation fa-beat-fade"></i>
                                </div>
                                <div class="col-lg-12">
                                    <h4 id="errorText">هناك خطأ ما</h4>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </div>
    </div>

</body>
<footer>
    <!-- Copyright -->
    <div class="text-center p-1">

        <p id="footer-text">تم الانشاء بواسطة <span style="color: var(--red-color);">فرع النظم</span> الدفعة <span style="color: var(--red-color);">164</span> ضباط إحتياط ©</p>
    </div>

    <!-- Copyright -->
</footer>
<script src="~/userDesign/js/all.min.js"></script>
<script src="~/userDesign/js/bootstrap.bundle.min.js"></script>
<script src="~/userDesign/js/chooseImage.js"></script>
<script src="~/userDesign/js/dateTime.js"></script>
<!-- <script src="js/bootstrap.bundle.min.js.map"></script> -->
<script src="~/userdesign/js/popouterror.js"></script>
@if (ViewBag.ErrorMessage is string s)
{
    if (!string.IsNullOrEmpty(s))
    {
        <script>popout({ error: '@s' })</script>
    }
}
</html>