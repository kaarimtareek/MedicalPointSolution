                                <thead>
                                    <tr>
                                        <th>مسلسل</th>
                                        <th>اسم الدواء</th>
                                        <th>الكمية</th>
                                    </tr>
                                </thead>
                            <tbody >
                                @foreach(var medicine in Model.Medicines)
                                {
                                
                                <tr>
                               
