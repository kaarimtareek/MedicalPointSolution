@using MedicalPoint.ViewModels.Visits;
@model CreateVisitRestViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/userDesign/css/all.min.css">
    <link rel="stylesheet" href="~/userDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userDesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/userDesign/css/style.css">
    <title>طباعة أورنيك</title>
    <link rel="icon" href="~/userDesign/img/logo.png">
</head>
<body class="background-with-color">
    <nav class="navbar navbar-expand-lg navbar-light print ">
        <div class="container">
            <div> 
                <a asp-action="Logout" asp-controller="Account" class="my-button">تسجيل الخروج <i class="fa-solid fa-right-from-bracket"></i></a>
                <button class="my-button-blue" onclick="window.print()">طباعة اورنيك <i class="fa-solid fa-print"></i></button>
                <a asp-action="Index" asp-controller="Medicines" class="my-button-blue">العودة للرئيسية <i class="fa-solid fa-house"></i></a>

            </div>
            <img src="~/userDesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="landing-three ">
        <div class="container fadeInUp-animation ">
            <div class="row  justify-content-center align-items-center">
                <div class="col-lg-4 text-center ">
                    <form asp-action="CreateVisitRest" method="post">
                        <input  hidden asp-for="VisitId"/>
                        <input  hidden asp-for="PatientId"/>
                    <table class="table  table-striped">
                        <p id="nametwo">اورنيك<i class="fa-solid fa-user-doctor"></i></p id="name">
                        <tbody >
                            <tr>
                                <th>الدرجة / الرتبة </th>
                                <td> @Model.Patient?.Degree</td>
                            </tr>
                            <tr>
                                <th>اسم المريض</th>
                                <td>@Model.Patient?.Name</td>
                            </tr>
                            <tr>
                                <th>اسم الطبيب</th>
                                <td>@Model.Doctor?.FullName</td>
                            </tr>
                        
                           <tr>
                                <th>نوع الراحة</th>
                                <td  >
                                    <select asp-items="ViewBag.RestTypes" required asp-for="RestTypeId">
                                        <option selected> اختر نوع الراحة</option>
                                    </select>

                                </td>
                            </tr>
                            <tr>
                                <th>تاريخ بداية الراحة</th>
                                <td> <input  type="datetime-local" value="@DateTime.Now" asp-for=StartDate required class=""/> </td>
                            </tr>
                            <tr>
                                <th>عدد ايام الراحة</th>
                                <td><input  type="number" asp-for=RestDaysNumber required class=""/></td>
                            </tr>
                           
                            <tr>
                                <th>رقم الكشف</th>
                                <td>@Model.VisitNumber</td>
                            </tr>
                            
                           
                            <tr>
                                <th>العيادة</th>
                                <td>@Model.Clinic?.Name</td>
                            </tr>
                            
                            <tr>
                                <th>ملاحظات</th>
                                <td><input type="text" asp-for="Notes" /></td>
                            </tr>
                        </tbody>
                        <input type="submit" value="انشاء اورنيك"  />
                    </table>
                    </form>
                    @if(Model.Medicines.Count> 0)
                    {
                        
                        <table class="table  table-striped">
                            <p id="nametwo" >الأدوية </p >
                                <thead>
                                    <tr>
                                        <th>مسلسل</th>
                                        <th>اسم الدواء</th>
                                        <th>الكمية</th>
                                    </tr>
                                </thead>
                            <tbody >
                                @foreach(var medicine in Model.Medicines)
                                {
                                
                                <tr>
                               
                                    <td></td>
                                    <td>@medicine.MedicineName </td>
                                    <td>@medicine.Quantity</td>
                                </tr>
                                }
                        
                            </tbody>
                        </table>
                    }
                   
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/userDesign/js/all.min.js"></script>
<script src="~/userDesign/js/bootstrap.bundle.min.js"></script>
<script src="~/userDesign/js/fullscreen.js"></script>
<!-- <script src="js/bootstrap.bundle.min.js.map"></script> -->
</html>