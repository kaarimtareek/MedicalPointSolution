@using MedicalPoint.ViewModels.Visits;
@model IEnumerable<VisitsViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/userdesign/css/all.min.css">
    <link rel="stylesheet" href="~/userdesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userdesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/userdesign/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/userdesign/css/style.css">
    <script defer src="~/userdesign/js/jquery-3.7.0.js"></script>
    <script defer src="~/userdesign/js/jquery.dataTables.min.js"></script>
    <script defer src="~/userdesign/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="~/userdesign/js/table.js"></script>
    <title> كشوفات المرضى</title>
    <link rel="icon" href="~/userdesign/img/logo.png">
</head>

<body class="background-with-color">
 
    <nav class="navbar navbar-expand-lg navbar-light  d-none d-lg-block sticky-top" id="bg">
        <div class="container">
            <div> <a asp-action="Logout" asp-controller="Account" class="my-button">تسجيل الخروج <i class="fa-solid fa-right-from-bracket"></i></a>
                @*<a asp-action="Create" class="my-button-green">إضافة كشف جديد <i class="fa-solid fa-user"></i></a>*@
                <a asp-action="Index" asp-controller="Patients" class="my-button-green">بيانات المرضى <i class="fa-solid fa-user"></i></a>
                <a class="my-button-blue"  id="printConfirm">طباعة البيانات <i class="fa-solid fa-print"></i></a>

                <a asp-action="Index" asp-route-date="@DateTime.Today" class="my-button-green" >كشوفات اليوم <i class="fa-solid fa-user"></i></a>

               @* <button class="my-button-blue">العودة للرئيسية <i class="fa-solid fa-house"></i></button>
*@
                
            </div>
            <img src="~/UserDesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="landing-three ">

        <div class="container fadeInUp-animation ">
            <div class="row  justify-content-center">
                <div class="col-lg-12 text-center">
                    <p id="nametwo">كشوفات المرضى <i class="fa-solid fa-user-group"></i></p id="name">
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>مسلسل</th>
                                <th>الدرجة / الرتبة</th>
                                <th>اسم المريض</th>
                                <th>العيادة</th>
                                <th>رقم الكشف</th>
                                <th>نوع الكشف</th>
                                <th>اسم الطبيب</th>
                                <th>حالة الكشف</th>
                                <th>تفاصيل المريض</th>
                                <th>تفاصيل الكشف</th>
                         
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var visits in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@visits.PatientDegree</td>
                                    <td>@visits.PatientName</td>
                                    <td>@visits.ClinicName</td>
                                    <td>@visits.VisitNumber</td>
                                    <td>@visits.Type</td>
                                    <td>@visits.DoctorName</td>
                                    <td>@visits.Status</td>
                             
                                    <td><a asp-action="Detials" asp-controller="Patients" asp-route-id="@visits.PatientId" id="link-green">تفاصيل المريض  <i class="fa-regular fa-file"></i></a></td>
                                    <td><a asp-action="Details" asp-controller="Visits" asp-route-id="@visits.Id" id="link-green">تفاصيل الكشف  <i class="fa-regular fa-file"></i></a></td>
              
                                </tr>
                                
                            }
                         
                        </tbody>
          
                      
                    </table>


                </div>
            </div>


        </div>
    </div>
    </div>




</body>
<script src="~/userdesign/js/all.min.js"></script>
<script src="~/userdesign/js/bootstrap.bundle.min.js"></script>
<script src="~/userdesign/js/print.js"></script>
</html>