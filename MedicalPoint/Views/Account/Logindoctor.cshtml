@model MedicalPoint.Data.MedicalPointUser

@{
    ViewData["Title"] = "Logindoctor";
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/UserDesign/css/all.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/UserDesign/css/style.css">
    <title>الطبيب</title>
    <link rel="icon" href="~/UserDesign/img/logo.png">
</head>

<body class="background-with-color">

    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <div class="text-one">

                <h1 class="main-p">النقطة الطبية</h1>
                <h1 class="second-p">كلية الضباط الإحتياط</h1>

            </div>

            <img src="~/UserDesign/img/logo.png" alt="logo">


        </div>
    </nav>
    <div class="landing-three ">

        <div class="container  fadeInUp-animation">
            <div class="row login">


                <form  id="account" method="post">
                    <div class="col-lg-12 text-center ">
                        <img src="~/UserDesign/img/طبيب.png" alt="" class="avatar ">
                        <p id="name"> كشف الطبيب</p>
                    </div>



                    <div class="col-lg-12 text-center ">
                        <input asp-for="Email" type="text" id="login-input-one" onkeyup="success('button-login')" class="my-input customewidth " type="text" placeholder="إسم المستخدم" required>
                       
                    </div>



                    <div class="col-lg-12 text-center ">
                        <input asp-for="Password" id="login-input-two" onkeyup="success('button-login')" class="my-input customewidth " type="password" placeholder="كلمة المرور" required>

                        
                    </div>


                    <div class="col-lg-12 text-center ">
                        <button class="my-button" type="submit" onclick="loading('button-login')" id="button-login">تسجيل الدخول <i class="fa-solid fa-right-from-bracket"></i></button>
                    </div>

                </form>



            </div>
        </div>
    </div>




</body>
<script>
    document.getElementById('button-login').disabled = true;
    function success(id) {
        if (document.getElementById("login-input-one").value === "" || document.getElementById("login-input-two").value === "") {
            document.getElementById(id).disabled = true;
        } else {
            document.getElementById(id).disabled = false;
        }
    }
    function loading(id) {
        document.getElementById(id).innerHTML = "<i class='fa-solid fa-spinner fa-spin-pulse'></i>";
        setTimeout(oldText, 1500);
        function oldText() {
            document.getElementById(id).innerHTML = "تسجيل الدخول <i class='fa-solid fa-right-from-bracket'></i>";

        }
    }
</script>
<script src="~/UserDesign/js/all.min.js"></script>
<script src="~/UserDesign/js/bootstrap.bundle.min.js"></script>



</html>
