@using MedicalPoint.ViewModels.Users;
@model AddUserViewModel

@{
    Layout = "~/Views/Shared/_LayoutDesignLeader.cshtml";
}







<!-- Add-user -->
<form asp-action="Create" method="post">
    <div class="text-center">
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;">اسم المستخدم</label>
            <div class="col-sm-10">
                <input asp-for="FullName" type="text" class="form-control">
            </div>
        </div>
        <div class="text-center">
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;">الرقم العسكري</label>
                <div class="col-sm-10">
                    <input asp-for=MilitaryNumber type="text" class="form-control">
                </div>
            </div>
            <div class="text-center">
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;">الرقم الهاتف </label>
                    <div class="col-sm-10">
                        <input asp-for=PhoneNumber  type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;">كلمة السر</label>
                <div class="col-sm-10">
                    <input asp-for=Password type="password" class="form-control">
                </div>
            </div>
            <div class="text-center">
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;">بريد الالكتروني  </label>
                    <div class="col-sm-10">
                        <input asp-for=Email type ="text" class="form-control">
                    </div>
                </div>
            </div>


            <div class="row mb-3">
                <label for="inputsp" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;">الرتبه / الدرجه</label>
                <div class="col-sm-10">
                    <select class="form-select" aria-label="Default select example" asp-for="DegreeId" asp-items="ViewBag.Degrees">
                        <option selected  style="font-weight: bold; font-size: 16px;">الدرجه / الرتبه </option>
                    </select>
                </div>

                </div>
                <div class="row mb-3">
                    <label for="inputsp" class="col-sm-2 col-form-label" style="font-weight: bold; font-size: 18px;"> نوع الحساب </label>
                    <div class="col-sm-10">
                        <select class="form-select" aria-label="Default select example" asp-for="AccountType" asp-items="ViewBag.AccountTypes">
                            <option selected  style="font-weight: bold; font-size: 16px;"> اختر  نوع الحساب </option>
                        </select>
                    </div>
            </div>




            <div class="text-center">
                    <input type="submit" value="تسجيل مستخدم جديد " class="btn btn-danger" style="width: 230px; border-radius: 15px; height: 40px; text-align: center; font-size: large; font-weight:bold;" role="button" />
            </div>

        </div>


</form><!-- End Add-User-->








