@using MedicalPoint.ViewModels.Patients;
@{
    Layout = null;

}
@model List<PatientViewModel>
<!DOCTYPE html>
<html dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/userdesign/css/all.min.css">
    <link rel="stylesheet" href="~/userdesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userdesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/userdesign/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/userdesign/css/style.css">
    <script defer src="~/userdesign/js/jquery-3.7.0.js"></script>
    <script defer src="~/userdesign/js/jquery.dataTables.min.js"></script>
    <script defer src="~/userdesign/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="~/userdesign/js/table.js"></script>
    <title> بيانات المرضى</title>
    <link rel="icon" href="~/userdesign/img/logo.png">
   
</head>

<body class="background-with-color">
 
    <nav class="navbar navbar-expand-lg navbar-light  d-none d-lg-block sticky-top" id="bg">
        <div class="container">
            <div> <a asp-action="Logout" asp-controller="Account" class="my-button">تسجيل الخروج <i class="fa-solid fa-right-from-bracket"></i></a>
                <a asp-action="Create" asp-controller="Patients" class="my-button-green">إضافة مريض جديد <i class="fa-solid fa-user"></i></a>
@*                 <a  asp-action="GetDataPatientToPrint" asp-controller="Patients" class="my-button-blue"  id="printConfirm">طباعة البيانات <i class="fa-solid fa-print"></i></a> 
 *@                <button  class="my-button-blue" onclick="window.print()">طباعة البيانات <i class="fa-solid fa-print"></i></button>
                <a asp-action="Index" asp-controller="Visits" class="my-button-green">الكشوفات <i class="fa-solid fa-user"></i></a>
                
            </div>
            <img src="~/userdesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="landing-three ">

        <div class="container fadeInUp-animation ">
            <div class="row  justify-content-center">
                <div class="col-lg-12 text-center">
                    <p id="nametwo">بيانات المرضى <i class="fa-solid fa-user-group"></i></p id="name">
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead>
                             <tr>
                                <th>مسلسل</th>
                                <th>الدرجة / الرتبة</th>
                                <th>الإسم</th>
                                <th>الرقم العسكري</th>
                                <th>الرقم القومي</th>
                                <th>رقم السرية </th>
                                <th>الرقم العام</th>
                                <th>المؤهل</th>
                                <th>اسم المسجل</th>
                                <th class="print">تفاصيل المريض</th>
                                <th class="print">كشف جديد</th>
                                <th class="print">تعديل</th>
                            </tr>
                        </thead>
                        <tbody>
                          @foreach(var patient in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td> @patient.Degree</td>
                                    <td>@patient.Name</td>
                                    <td>@patient.MilitaryNumber</td>
                                    <td> @patient.NationalNumber</td>
                                    <td>@patient.SaryaNumber</td>
                                    <td>@patient.GeneralNumber</td>
                                    <td>@patient.Major</td>
                                    <td>@patient.RegisteredUserName</td>
                                    <td class="print"><a  asp-action="Details" asp-controller="Patients" asp-route-id ="@patient.Id" id="link-green">تفاصيل المريض  <i class="fa-regular fa-file"></i></a></td>
                                    <td class="print"><a asp-action="Create" asp-controller="Visits" asp-route-patientId="@patient.Id" id="link-green">كشف جديد  <i class="fa-solid fa-plus"></i></a></td>
                                    <td class="print"><a  asp-action="Edit" asp-controller="Patients" asp-route-id ="@patient.Id" id="link-green">تعديل<i class="fa-regular fa-file"></i></a></td>
                                </tr>
                                
                            }
                         
                        </tbody>
          
                      
                    </table>


                </div>
            </div>


        </div>










       
    </div>
 




</body>
<script src="~/userdesign/js/all.min.js"></script>
<script src="~/userdesign/js/bootstrap.bundle.min.js"></script>

</html>