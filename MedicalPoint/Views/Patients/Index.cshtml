@using MedicalPoint.ViewModels.Patients;
@model IEnumerable<PatientViewModel>
@{
    ViewData["Title"] = "IndexPatients";
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/UserDesign/css/all.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/UserDesign/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/style.css">
    <script defer src="~/UserDesign/js/jquery-3.7.0.js"></script>
    <script defer src="~/UserDesign/js/jquery.dataTables.min.js"></script>
    <script defer src="~/UserDesign/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="~/UserDesign/js/table.js"></script>
    <title>بيانات المرضى</title>
    <link rel="icon" href="~/UserDesign/img/logo.png">
</head>

<body class="background-with-color">
 
    <nav class="navbar navbar-expand-lg navbar-light  d-none d-lg-block sticky-top" id="bg">
        <div class="container">
            <div> <button class="my-button">تسجيل الخروج <i class="fa-solid fa-right-from-bracket"></i></button>
                <a class="my-button-green" asp-action="Create" asp-controller="Patients">إضافة مريض جديد <i class="fa-solid fa-user"></i></a>
                <a class="my-button-green" asp-action="ListAllVisits" asp-controller="Visits"> قائمه الكشوفات <i class="fa-solid fa-list-ul"></i></a>

                <a class="my-button-blue" href="طباعة بيانات المرضى.html" id="printConfirm">طباعة البيانات <i class="fa-solid fa-print"></i></a>
                
            </div>
            <img src="~/UserDesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="landing-three ">

        <div class="container fadeInUp-animation ">
            <div class="row  justify-content-center">
                <div class="col-lg-12 text-center">
                    <p id="nametwo">بيانات المرضى <i class="fa-solid fa-user-group"></i></p id="name">
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>مسلسل</th>
                                <th>الإسم</th>
                                <th>الرقم العسكري</th>
                                <th>الرقم القومي</th>
                                <th>الدرجة / الرتبة</th>
                                <th>رقم السرية </th>
                                <th>الرقم العام</th>
                                <th>المؤهل</th>
                                <th>اسم المسجل</th>
                                <th>تفاصيل المريض</th>
                                <th>كشف جديد</th>
                                <th>تعديل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model) {
                            <tr>
                                <td></td>
                                <td> @item.Name</td>
                                <td>@item.MilitaryNumber</td>
                                <td>@item.NationalNumber</td>
                                <td>@item.Degree</td>
                                <td>@item.SaryaNumber</td>
                                <td>@item.GeneralNumber</td>
                                <td> @item.Major</td>

                                <td>@item.User.FullName</td> @* UserName*@
                                <td><a     asp-route-id="@item.Id"  id="link-green">تفاصيل المريض  <i class="fa-regular fa-file"></i></a></td>
                                <td><a     asp-route-id="@item.Id"   id="link-green">كشف جديد  <i class="fa-solid fa-plus"></i></a></td>
                                <td><a     asp-route-id="@item.Id"   id="link">تعديل  <i class="fa-solid fa-pen-to-square"></i></a></td>
                            </tr>
                            }
                         
                        </tbody>
          
                      
                    </table>


                </div>
            </div>


        </div>
    </div>
    </div>




</body>
<script src="~/UserDesign/js/all.min.js"></script>
<script src="~/UserDesign/js/bootstrap.bundle.min.js"></script>
<script src="~/UserDesign/js/print.js"></script>

</html>


