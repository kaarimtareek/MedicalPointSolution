@model IEnumerable<MedicalPoint.Data.Patient>

@{
    ViewData["Title"] = "IndexPatients";
}

<h1>IndexPatients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MilitaryNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaryaNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneralNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastVisitAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MilitaryNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaryaNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneralNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastVisitAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
