@model MedicalPoint.ViewModels.Patients.PatientViewModel


@{
    Layout = "~/Views/Shared/_LayoutDesignLeader.cshtml";
}


<center>
    <div class="col-11">
        <div class="card recent-sales overflow-auto">




            <div class="card-body">
                <h5 class="card-title fw-bold">تفاصيل المريض</h5>

                <table id="table2" class="table datatable table-bordered table-striped" style="border: 0.5px;  border-width: 0.5px;">
                    <thead class="Light">
                        <tr>
                        </tr>
                    </thead>
                    <tbody text-center>
                        <tr>
                            <th scope="row" style="background-color: rgba(101, 121, 156, 0.774);"> <div class="text-center"><label>اسم المريض</label></div></th>
                            <th scope="row" style="background-color: rgba(101, 121, 156, 0.774);"><div class="text-center"><label>@Model.Name</label></div></th>



                        </tr>
                        <tr>
                            <th scope="row"><div class="text-center"><label>الرقم العسكري</label></div></th>
                            <th scope="row"><div class="text-center"><label>@Model.MilitaryNumber</label></div></th>

                        </tr>
                        <tr>
                            <th scope="row"><div class="text-center"><label>الرقم القومي</label></div></th>
                            <th scope="row"><div class="text-center"><label>@Model.NationalNumber</label></div></th>



                        </tr>
                        <tr>
                            <th scope="row"><div class="text-center"><label>الرتبة</label></div></th>
                            <th scope="row"><div class="text-center"><label>@Model.Degree</label></div></th>

                        </tr>
                        <tr>
                            <th scope="row"><div class="text-center"><label>الرقم العام</label></div></th>
                            <th scope="row"><div class="text-center"><label>@Model.GeneralNumber</label></div></th>


                        </tr>
                        <tr>
                            <th scope="row"><div class="text-center"><label>رقم السرية</label></div></th>
                            <th scope="row"><div class="text-center"><label>@Model.SaryaNumber</label></div></th>


                        </tr>
                        <tr>
                            <th scope="row"><div class="text-center"><label>المؤهل</label></div></th>
                            <th scope="row"> <div class="text-center"><label>@Model.Major </label></div></th>

                        </tr>


                    </tbody>
                </table>
                <div class="text-center">
                    <a class="btn  " style="width: 280px; border-radius: 15px; height: 40px; text-align: center; font-size: large; font-weight:bold; background-color: rgb(24, 24, 77); color: white; "asp-action="PatientEdit" asp-controller="SuperAdmin" asp-route-id="@Model.Id" role="button">تعديل</a>
                    <a class="btn btn-danger " style="width: 280px; border-radius: 15px; height: 40px; text-align: center; font-size: large; font-weight:bold; margin-right: 10px;" asp-action="GetPatients" asp-controller="SuperAdmin" role="button">رجوع</a>

                </div>

            </div>

        </div>
    </div><!-- End P-report -->
</center>



