@using MedicalPoint.ViewModels.Users
@model IEnumerable<UsersViewModel>
@{
    Layout = "~/Views/Shared/_LayoutDesignLeader.cshtml";
}



<!-- P-Data-->
<div class="col-12">
    <div class="card top-selling overflow-auto">

        <div class="filter">
            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                <li class="dropdown-header text-start">
                    <h6>فرز</h6>
                </li>

                <li><a class="dropdown-item" href="#">اليوم</a></li>
                <li><a class="dropdown-item" href="#">هذا الشهر</a></li>

            </ul>
        </div>

        <div class="card-body pb-0">
            <h5 class="card-title fw-bold text-center">بيانات المستخدمين</h5>

            <table id="dtBasicExample" style="border: 0.5px; background-color: gray; border-width: 0.5px;" class="table table-striped  table datatable" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th scope="col">الدرجه /الرتبه </th>
                        <th scope="col">الاسم  </th>
                        <th scope="col">الحساب</th>
                        <th scope="col">الرقم العسكري</th>
                        <th scope="col">نوع الحساب</th>
                        <th scope="col">تعديل</th>
                        <th scope="col">تغيير الحالة الحساب</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        
                    

                    <tr>
                        <td></td>
                        <th scope="row">@item.DegreeName</th>
                        <td> @item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.MilitaryNumber</td>
                        <td class="fw-bold">@item.AccountType  </td>
                         <td><a class="btn btn-warning  btn-sm" asp-action="UserEdit" asp-controller="SuperAdmin" asp-route-id="@item.Id" role="button">تعديل </a></td>
                         @if( item.Id != ViewBag.UserId )
                            {
                                
                                @if (item.IsActive )
                                {

                                    <td><a class="btn btn-danger  btn-sm" asp-controller="SuperAdmin" asp-action="ChangeAtiveStatus" asp-route-id="@item.Id" role="button">ايقاف  </a></td>
                                }
                                else
                                {
                                    <td><a class="btn btn-success  btn-sm" asp-controller="SuperAdmin" asp-action="ChangeAtiveStatus" asp-route-id="@item.Id" role="button">تفعيل  </a></td>
                                }
                            }
                            else
                            {
                                <td>-----</td>
                            }

                    </tr>
                    }
                    
                </tbody>
            </table>
        
        </div>

    </div>
</div><!-- End U-Data -->
