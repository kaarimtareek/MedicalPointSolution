                    <!-- E-Data -->
                    <form  asp-action="PatientEdit" method="post">

                        <input asp-for="Id" value="@Model.Id" style="display:none"/>

                        <div class="row mb-3">
                            <label for="fullName" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">اسم المريض</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="Name"  class="form-control" id="fullName" >
                            </div>
                        </div>



                        <div class="row mb-3">
                            <label for="mnumber" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">الرقم العسكري</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="MilitaryNumber"   class="form-control" id="mnumber">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="degre" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">الرتبة</label>
                            <div class="col-md-8 col-lg-9">
                                <select  asp-for="DegreeId"     class="form-control" id="degre" asp-items="@ViewBag.Degrees"></select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="pv" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">الرقم القومي</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="NationalNumber"  class="form-control" id="Nid" >
                            </div>
                        </div>



                        <div class="row mb-3">
                            <label for="Address" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">المؤهل</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="Major"    class="form-control" id="َQU" >
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="Phone" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">رقم السرية</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="SaryaNumber"   class="form-control" id="SN">
                            </div>
                        </div>



                        <div class="row mb-3">
                            <label for="age" style="font-weight: bold;" class="col-md-4 col-lg-3 col-form-label">الرقم العام</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="GeneralNumber" class="form-control" id="GN" >
                            </div>
                        </div>





                        <div class="text-center">
                            <button class="btn btn-danger" type="submit"  style="margin-right: 200px; height: 40px; padding-top: 7px;"  role="button">حفظ التغييرات</button>

                        </div>

                    </form><!-- End E-Data -->

      

           