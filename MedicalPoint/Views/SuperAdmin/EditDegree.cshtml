@model MedicalPoint.ViewModels.Degrees.DegreesViewModel

@{
    Layout = "~/Views/Shared/_LayoutDesignLeader.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDegree" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Id" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ التعديل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


