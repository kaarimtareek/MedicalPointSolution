    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_LayoutDesignLeader.cshtml";
}
<div class="pagetitle">
    <h1>تعديل بيانات المريض</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">قائد النقطة الطبية</a></li>
            <li class="breadcrumb-item active"></li>
            <li class="breadcrumb-item active"></li>
