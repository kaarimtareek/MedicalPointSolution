@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/UserDesign/css/all.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/UserDesign/css/style.css">
    <title>الصفحة الرئيسية</title>
    <link rel="icon" href="~/UserDesign/img/logo.png">
</head>
<body class="background">
    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <div class="text-one">
                <h1 class="main-p">النقطة الطبية</h1>
                <h1 class="second-p">كلية الضباط الإحتياط</h1>
            </div>
            <img src="~/UserDesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="fadeInUp-animation">
        <div class="landing-one">

            <div class="container ">
                <div class="row justify-content-center">
                    <div class="col-lg-12 text-center typewrite">
                        <h1>منظومة الرعاية الصحية </h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="landing-two">
            <div class="row justify-content-center">
                @if (this.Context.User.Identity.IsAuthenticated)
                {
                    <div class="col-lg-2 text-center">
                        <a  asp-controller="Account" asp-action="Index"> <img src="~/UserDesign/img/استقبال.png" class="avatar" alt=""></a>
                        <p>بياناتي</p>
                    </div>
                    
                }
                <div class="col-lg-2 text-center">
                    <a asp-action="LoginRecieptionist" asp-controller="Account"> <img src="~/UserDesign/img/استقبال.png" class="avatar" alt=""></a>
                    <p>إستقبال المرضى</p>
                </div>
                <div class="col-lg-2 text-center">
                    <a asp-action="Login" asp-controller="Account"><img src="~/UserDesign/img/طبيب.png" class="avatar" alt=""></a>
                    <p>كشف الطبيب</p>
                </div>
                <div class="col-lg-2 text-center">
                    <a href="تسجيل دخول الصيدلية.html"> <img src="~/UserDesign/img/صيدلية.png" class="avatar" alt=""></a>
                    <p>الصيدلية</p>
                </div>
                <div class="col-lg-2 text-center">
                    <a href="تسجيل دخول قائد النقطة.html"> <img src="~/UserDesign/img/4.png" class="avatar" alt=""></a>
                    <p>قائد النقطة الطبية</p>
                </div>
                <div class="col-lg-2 text-center">
                    <a href="تسجيل دخول الإعدادات.html"> <img src="~/UserDesign/img/اعدادات.png" class="avatar" alt=""></a>
                    <p>إعدادات النظام</p>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/UserDesign/js/all.min.js"></script>
<script src="~/UserDesign/js/bootstrap.bundle.min.js"></script>
</html>
