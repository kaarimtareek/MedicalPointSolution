@using MedicalPoint.ViewModels.Medicines;
@model AddMedicinesViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/UserDesign/css/all.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/UserDesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/UserDesign/css/style.css">
    <title>اضافة ادوية</title>
    <link rel="icon" href="~/UserDesign/img/logo.png">
</head>
<body class="background-with-color">
    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <div class="text-one">

           
            <a asp-action="Index" asp-controller="Medicines" class="my-button-blue">العودة للرئيسية <i class="fa-solid fa-house"></i></a>

            </div>

            <img src="~/UserDesign/img/logo.png" alt="logo">


        </div>
    </nav>
    <div class="landing-three ">
        <div class="container  fadeInUp-animation">
            <div class="row ">
                <form action="Create" method="post" >
                    <div class="col-lg-12 text-center ">
                        <img src="~/UserDesign/img/medicine.gif" alt="">
                        <p id="name">إضافة أدوية</p>
                    </div>
                    <div class="col-lg-12 text-center ">
                        <input asp-for="Name" class="my-input customewidth" type="text"  placeholder="إسم الصنف" required>
                    </div>
                    <div class="col-lg-12 text-center ">
                        <input type="number" asp-for="Quantity" class="my-input customewidth"  placeholder="الكمية" required>
                    </div>
                    <div class="col-lg-12 text-center ">
                        <input type="number" asp-for="MinimumQuantityThreshold" class="my-input customewidth" placeholder="الحد الادني من الاكتفاء" >
                    </div>
                    <div class="col-lg-12 text-center ">
                        <button type="submit" class="my-button  mt-3">إضافة <i class="fa-solid fa-floppy-disk"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<footer>
    <!-- Copyright -->
    <div class="text-center p-1">

        <p id="footer-text">تم الانشاء بواسطة <span style="color: var(--red-color);">فرع النظم</span> الدفعة <span style="color: var(--red-color);">164</span> ضباط إحتياط ©</p>
    </div>

    <!-- Copyright -->
</footer>
<script src="~/UserDesign/js/all.min.js"></script>
<script src="~/UserDesign/js/bootstrap.bundle.min.js"></script>
<!-- <script src="js/bootstrap.bundle.min.js.map"></script> -->

</html>