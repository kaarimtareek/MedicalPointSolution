@using MedicalPoint.ViewModels.Medicines;
@model GiveVisitMedicinesViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/userDesign/css/all.min.css">
    <link rel="stylesheet" href="~/userDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userDesign/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="~/userDesign/css/style.css">
    <title>طباعة أورنيك</title>
    <link rel="icon" href="~/userDesign/img/logo.png">
</head>
<body class="background-with-color">
    <nav class="navbar navbar-expand-lg navbar-light print ">
        <div class="container">
            <div> 
                <a asp-action="Logout" asp-controller="Account" class="my-button">تسجيل الخروج <i class="fa-solid fa-right-from-bracket"></i></a>
                <a onClick="window.location.reload()" href=""
                   class="my-button-green">
                    تحديث الصفحة  <i class="fa-solid fa-arrows-rotate"></i>
                </a>
                <button class="my-button-blue" onclick="window.print()">طباعة روشتة <i class="fa-solid fa-print"></i></button>
                <a asp-action="Index" asp-controller="Medicines" class="my-button-blue">العودة للرئيسية <i class="fa-solid fa-house"></i></a>

            </div>
            <img src="~/userDesign/img/logo.png" alt="logo">
        </div>
    </nav>
    <div class="landing-three ">
        <div class="container fadeInUp-animation ">
            <div class="row  justify-content-center align-items-center">
                <div class="col-lg-4 text-center ">
                    <table class="table  table-striped">
                        <p id="nametwo">روشتة ادوية <i class="fa-solid fa-user-doctor"></i></p id="name">
                        <tbody >
                            <tr>
                                <th>الدرجة / الرتبة </th>
                                <td>@Model.Patient?.Degree</td>
                            </tr>
                            <tr>
                                <th>اسم المريض</th>
                                <td>@Model.Patient?.Name</td>
                            </tr>
                            <tr>
                                <th>اسم الطبيب</th>
                                <td>@Model.Doctor?.FullName</td>
                            </tr>
                        
                           <tr>
                                <th>رقم الكشف</th>
                                <td>@Model.VisitNumber</td>
                            </tr>
                             <tr>
                                <th>نوع الكشف</th>
                                <td>@Model.Type</td>
                            </tr>
                            <tr>
                                <th>التشخيص</th>
                                <td>@Model.Diagnosis</td>
                            </tr>
                           
                            <tr>
                                <th>العيادة</th>
                                <td>@Model.Clinic?.Name</td>
                            </tr>
                            <tr>
                                <th>تاريخ الكشف</th>
                                <td>@Model.VisitTime</td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table  table-striped">
                        <p id="nametwo" >الأدوية </p >
                            <thead>
                                <tr>
                                    <th>مسلسل</th>
                                    <th>اسم الدواء</th>
                                    <th>الكمية</th>
                                </tr>
                            </thead>
                        <tbody >
                            @foreach(var medicine in Model.Medicines)
                            {
                                
                            <tr>
                               
                                <td></td>
                                <td>@medicine.MedicineName </td>
                                <td>@medicine.Quantity</td>
                            </tr>
                            }
                        
                        </tbody>
                    </table>
                    @if(!Model.IsMedicinesGiven)
                    {
                        <form method="post" asp-action="GiveVisitMedicines" asp-controller="Medicines" asp-route-id="@Model.Id">
                         <button type="submit"  class="my-button-blue print">صرف الأدوية <i class="fa-solid fa-plus"></i>
                             </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>



      <button type="button" id="popoutButton" class="my-button" data-bs-toggle="modal"
            data-bs-target="#exampleModal" style="display: none;"></button>
    <div class="modal fade text-center" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">


                    <div class="row justify-content-center">
                        <div class="col-lg-12">

                            <div class="col-lg-12">
                                <i style="color: var(--red-color); font-size: 80px; margin-bottom:15px;"
                                   class="fa-solid fa-circle-exclamation fa-beat-fade"></i>
                            </div>
                            <div class="col-lg-12">
                                <h4 id="errorText">هناك خطأ ما</h4>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    <!--popout div-->
    <div class="text-center">
        <button type="button" id="popoutButton" class="my-button" data-bs-toggle="modal"
                data-bs-target="#exampleModal" style="display: none;"></button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">


                        <div class="row justify-content-center">
                            <div class="col-lg-12">

                                <div class="col-lg-12">
                                    <i style="color: var(--red-color); font-size: 80px; margin-bottom:15px;"
                                       class="fa-solid fa-circle-exclamation fa-beat-fade"></i>
                                </div>
                                <div class="col-lg-12">
                                    <h4 id="errorText">هناك خطأ ما</h4>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </div>
    </div>

</body>
  <footer >
        <!-- Copyright -->
        <div class="text-center p-1" >
            
          <p id="footer-text">تم الانشاء بواسطة <span style="color: var(--red-color);">طلاب فرع النظم</span> الدفعة <span style="color: var(--red-color);">164</span> ضباط إحتياط ©</p>
        </div>
        
        <!-- Copyright -->
      </footer>
<script src="~/userDesign/js/all.min.js"></script>
<script src="~/userDesign/js/bootstrap.bundle.min.js"></script>
<script src="~/userDesign/js/fullscreen.js"></script>
<script src="~/userdesign/js/popouterror.js"></script>
@if (ViewBag.ErrorMessage is string s)
{
   if(!string.IsNullOrEmpty(s))
    {
    <script>popout({ error: '@s' })</script>
    }
}
<!-- <script src="js/bootstrap.bundle.min.js.map"></script> -->
</html>